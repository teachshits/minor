<h1>Вход для сотрудника</h1>

<div>
<%= form_for(:usersession, url: usersessions_path) do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log in", class: "btn btn-large btn-primary" %>
<% end %>

<p>New Employee? <2%= link_to "Add Employee", add_worker_path %></p>
</div>
