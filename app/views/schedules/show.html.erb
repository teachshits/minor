<table id="sked">
  <tr align="center">
    <td></td>
    <td></td>
    <td>Понедельник</td>
    <td>Вторник</td>
    <td>Среда</td>
    <td>Четверг</td>
    <td>Пятница</td>
    <td>Суббота</td>
    <td>Воскресенье</td>
    <td></td>
  </tr>
  <tr id="select_time">
    <td rowspan="2" class="employee_name"><span>Сотрудник:</span><%= @employee.name %> </td>
    <%= form_for(@schedule) do |f| %>
    <td>Начало</td>      
    <td><%= f.time_select(:MonStart, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:TueStart, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:WedStart, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:ThuStart, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:FriStart, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:SatStart, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:SunStart, :include_blank => true, minute_step:15) %></td>
    <td rowspan="2" class"schedule_save">      
      <%= f.hidden_field :rate_this_week %>
      <%= f.hidden_field :employee_id %>
      <%= f.submit "Save" %>
    </td>
  </tr>  
  <tr>
    <td>Конец</td>
    <td><%= f.time_select(:MonEnd, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:TueEnd, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:WedEnd, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:ThuEnd, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:FriEnd, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:SatEnd, :include_blank => true, minute_step:15) %></td>
    <td><%= f.time_select(:SunEnd, :include_blank => true, minute_step:15) %></td>
    <% end %>
    

      <br>
      

  </tr>
</table>
