<% @b = session[:biz_id] %>
<h1><%= @business.name %> <%= link_to "Edit", edit_business_url(@b) %></h1>


<%= link_to "Add a new employee here", new_employee_url %>

<table>
  <% @business.employees.each do |employee| %>
    <tr>
      <td><%= employee.name %></td>
      <td><%= employee.payrate %></td>
      <td><%= link_to "Build New Schedule", new_schedule_url(:employee_id => employee.id, :rate_this_week => employee.payrate) %></td>
      <td><%= link_to "Edit", edit_employee_url(employee) %></td>
      <td><%= link_to "Usercard", employee_url(employee) %> </td>
      <td><%= link_to "Delete", employee_url(employee), :confirm => "Are you sure?" %></td>
    </tr>
  <% end %>
</table>

